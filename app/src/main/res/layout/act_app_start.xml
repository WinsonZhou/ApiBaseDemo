<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/start_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/start_bg_light"
        android:scaleType="fitXY" />
    
    <ImageView
        android:id="@+id/start_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        android:background="@mipmap/start_desc"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/start_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:background="@mipmap/start_logo_light" />
    
    <ImageView
        android:id="@+id/start_shan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:background="@mipmap/start_shan" />
    
    <LinearLayout
        android:id="@+id/start_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp">
        
        <LinearLayout
            android:id="@+id/wind"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="30dp"
                android:background="@color/white" />
            
            <ImageView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:background="@color/white" />
            
            <ImageView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/white" />
            
            <ImageView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        
        </LinearLayout>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/start_person" />
    
    </LinearLayout>
    
    
    <ImageView
        android:id="@+id/start_hb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:background="@mipmap/start_hb" />
    
    <ImageView
        android:id="@+id/start_desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="-132dp"
        android:background="@mipmap/start_desc" />

</FrameLayout>